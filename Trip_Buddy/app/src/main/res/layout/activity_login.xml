<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/LoginBackground"
    android:layout_height="match_parent"
    tools:context="com.example.caozhongli.tripbuddy.Login">

    <Button
        android:id="@+id/btnSignin"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:background="@color/WordDark"
        android:text="Sign in"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary" />

    <EditText
        android:id="@+id/edtUser"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="115dp"
        android:background="@color/colorPrimary"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/colorPrimaryDark" />

    <EditText
        android:id="@+id/edtPassword"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/edtUser"
        android:layout_alignLeft="@+id/edtUser"
        android:layout_alignStart="@+id/edtUser" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Password"
        android:textColor="@color/WordLight"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_below="@+id/edtUser"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Address"
        android:textColor="@color/WordLight"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_above="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp" />

    <Button
        android:id="@+id/btnSignup"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnSignin"
        android:layout_alignStart="@+id/btnSignin"
        android:layout_below="@+id/btnSignin"
        android:layout_marginTop="23dp"
        android:background="@color/WordLight"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSignup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="You can continue with the following "
        android:textColor="@color/colorPrimaryDark" />

    <com.facebook.login.widget.LoginButton xmlns:facebook="http://schemas.android.com/apk/res-auto"
        android:id="@+id/btnFSignin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/btnGSignin"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/btnFSignin"
        android:layout_alignStart="@+id/btnFSignin"
        android:layout_below="@+id/btnFSignin"
        android:layout_marginTop="12dp">

    </com.google.android.gms.common.SignInButton>

    <Button
        android:id="@+id/btnGBpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edtPassword"
        android:layout_alignRight="@+id/edtPassword"
        android:layout_below="@+id/edtPassword"
        android:background="@color/LoginBackground"
        android:text="Forget your password?"
        android:textAllCaps="false"
        android:textSize="8sp" />

</RelativeLayout>
